<div class="lang-switcher">
    <a href="<%= baseurl %>/blog" class="lang-btn"><%- contentData.ku.switcher_label %></a>
</div>

<div class="hero">
    <img src="<%= baseurl %>/assets/images/channels4_banner.jpg" alt="Huda Jassim Banner" class="banner-img">
    <div class="container">
        <div class="profile-container">
            <img src="<%= baseurl %>/assets/images/channels4_profile.jpg" alt="Huda Jassim" class="profile-img">
        </div>
        
        <div class="content-card">
            <a href="<%= baseurl %>/ku" class="back-link"><%- contentData.ku.back_to_home %></a>
            <h1 class="name"><%- contentData.ku.blog_title %> <span class="header-icons"><span class="tea-icon" title="Tea Time">ðŸ«–</span><span class="book-icon" title="Reading"></span></span></h1>
            <p style="color: #94a3b8; margin-bottom: 2rem; text-align: center;"><%- contentData.ku.blog_description %></p>
            
            <div class="blog-list">
                <% if (posts && posts.length > 0) { %>
                    <% posts.forEach(post => { %>
                    <article class="blog-card">
                        <a href="<%= baseurl %>/posts/<%= post.slug %>" class="blog-card-link">
                            <div class="blog-card-content">
                                <h2><%- post.title %></h2>
                                <p class="blog-excerpt">
                                    <% if (post.description) { %>
                                        <%- post.description %>
                                    <% } else { %>
                                        <%- post.excerpt %>
                                    <% } %>
                                </p>
                                <div class="blog-meta">
                                    <time datetime="<%= post.dateISO %>">
                                        <%= post.dateFormatted %>
                                    </time>
                                </div>
                            </div>
                        </a>
                    </article>
                    <% }); %>
                <% } else { %>
                    <div class="no-posts">
                        <p><%- contentData.ku.no_posts %></p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

